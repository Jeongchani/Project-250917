{
  "name": "todo-bar-app",
  "version": "1.0.4",
  "description": "A simple todo bar Electron app",
  "author": "Jeongchani <",
  "main": "src/main/index.js",
  "scripts": {
    "dev:renderer": "cd frontend && npm run dev",
    "dev:electron": "cross-env NODE_ENV=development ELECTRON_DEV=1 wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "clean": "rimraf dist release",
    "build": "npm run build:renderer && npm run clean && npm run build:electron",
    "release": "npm run build:renderer && npm run clean && electron-builder --publish always"
  },
  "build": {
    "appId": "com.yourdomain.todobar",
    "productName": "TodoBarApp",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "src/**",
      "frontend/dist/**",
      "package.json",
      "node_modules/**",
      "!**/*.map",
      "!**/*.ts",
      "!frontend/**/src/**",
      "!**/package-lock.json"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Jeongchani",
        "repo": "Project-250917"
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^26.6.10",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2"
  }
}
